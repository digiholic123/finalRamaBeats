<% layout('../layout') %>
<style>
.select2-selection__rendered{
    margin-top: -6px;
}
</style>
<div class="content">
    <div class="container-fluid">
        <div class="row ">
            <div class="col-xl-12 col-md-12">
                <div class="card-box pt-0 pb-0">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item " aria-current="page"><a href="/"> Home </a></li>
                            <li class="breadcrumb-item active" aria-current="page">Andar Bhar Report</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

     <div class="col-xl-12">
        <div class="card-box">
            <h4 class="header-title mt-0 mb-3">Andar Bhar Sales Report</h4>

            <div class="row">
                <div class="col-md-3">

                    <div class="form-group">
                        <label class="col-form-label">Start Date</label>
                            <div class="input-group">
                                <input type="text" class="form-control datepicker sDate" placeholder="mm/dd/yyyy" id="datepicker-autoclose" autocomplete="off">
                                <div class="input-group-append">
                                    <span class="input-group-text"><i class="ti-calendar"></i></span>
                                </div>
                            </div><!-- input-group -->
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="col-form-label" >End Date</label>
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control datepicker eDate" placeholder="mm/dd/yyyy" id="datepicker-autoclose" autocomplete="off">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="ti-calendar"></i></span>
                            </div>
                        </div><!-- input-group -->
                    </div>

                </div>
                
                <div class="col-md-3">
                    <label class="col-form-label">Provider Name</label>
                    <div class="form-group">
                        <select id="gameid" class="form-control" aria-placeholder="Select Game">
                            <option value="0">All</option>
                            <%  for(index in data){ %>
                                <option value="<%= data[index]._id %>"><%= data[index].providerName %></option>
                            <%  } %>
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="col-form-label">Player Name</label>
                    <input type="text" class="form-control" placeholder="Type Username" id="findUser" autocomplete="off">
                    <span style="font-size: 13px;"> Type Minimum 3 Char to get suggestion</span>
                </div>
                <div class="col-md-12 text-center">
                    <button class="btn btn-danger waves-effect waves-light btn-sm"> <span>Cancel&nbsp;</span></button>
                    <button class="btn btn-dark waves-effect waves-light btn-sm" id="submitInfo"> <span>Submit&nbsp;</span></button>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row ">
            <div class="col-xl-12 col-md-12">
                <div class="card-box">
                    <table  class="table table-bordered text-center nowrap">
                        <thead>
                        <tr>
                            <th>Sr.</th>
                            <th>Date</th>
                            <th>Bidding Points</th>
                            <th>Winning Points</th>
                            <th>Profit/Loss</th>
                        </tr>
                        </thead>
                        <tbody id="completedata">
                        <tr>
                            <td colspan="6">No Records Found</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css" />
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
$("#submitInfo").click(function(){
    const StartDate = $(".sDate").val();
    const EndDate = $(".eDate").val();
    const gameId = $("#gameid").val();
    const userId = $("#findUser").val();
    if(!StartDate || !EndDate)
    {
        toastr["info"]('Starting Date And End Date Cannot Be Empty', "Indo Bets Games");
    }
    else
    {
        $.ajax({
        type: "post",
        url: "/salesReport/userReportAB/",
        data: { startDate : StartDate, endDate : EndDate, gameId: gameId, userId: userId },
        success: function(data) {
            if (Object.keys(data).length === 0)
            {
                toastr["warning"]("No Data Found","Indo Bets Games");
                $("#groupData").html('<tr class="text-center"><td colspan = "4">No Data Available</td></tr>');
                $('#sumTotal').html('');
            }
            else{
                let Html;
                var winPoint = data[0].GameWinPoints;
                var bidPoint = data[0].BiddingPoints;
                let pf;
                pf = bidPoint - winPoint;
                let color = 'red'
                if(pf > 0){
                    color = '#22b922'
                }
                        
                Html = '<tr><td>1</td><td>' + StartDate + ' TO '+ EndDate +'</td><td>' + bidPoint +'</td><td>'+ winPoint  +'</td><td style="color:'+ color +'">'+ pf +'</td></tr>';
                $("#completedata").html(Html);
                }
            }
        });
    }
});

$('#findUser').autocomplete({
    source: function (req, res) {
            $.ajax({
                url: "/salesReport/getUsername",
                dataType: "json",
                type: "POST",
                data: req,
                success: function (data) {
                    var result = [];
                    data.forEach(function (e) {
                        let obj = {
                            id : e._id,
                            label  : e.username
                        };
                        result.push(obj);
                    });
                    res(result);
                },
                error: function (err) {
                    alert("Contact Support Partner: " + JSON.stringify(err));
                }
            });
    },
    minLength: 3,
    autoFocus: true,
    select: function (event, ui) {
        if (ui.item) {
            $('#findUser').val(ui.item.label);
        }
    }
});

</script>